<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#202045"
                android:startColor="#303055"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#101020" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#202020"
                android:startColor="#303030"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#101010" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>